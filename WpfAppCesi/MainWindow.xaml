<Window x:Class="WpfAppCesi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCesi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="346*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid HorizontalAlignment="Left" Height="304" Margin="10,10,0,0" VerticalAlignment="Top" Width="746" Grid.ColumnSpan="2"/>
                    <Button x:Name="btAjouterChambre" Content="Ajouter chambre" HorizontalAlignment="Left" Margin="10,334,0,0" VerticalAlignment="Top" Width="110" Height="27" Click="btAjouterChambre_Click" Grid.ColumnSpan="2"/>
                    <Button x:Name="btModifierChambre" Content="Modifier chambre" HorizontalAlignment="Left" Margin="59.989,334,0,0" VerticalAlignment="Top" Width="110" Height="27" Click="btModifierChambre_Click" Grid.Column="1"/>
                    <Button x:Name="btSupprimerChambre" Content="Supprimer chambre" HorizontalAlignment="Left" Margin="187.989,334,0,0" VerticalAlignment="Top" Width="121" Height="27" Click="btSupprimerChambre_Click" Grid.Column="1"/>
                    <Button x:Name="btReserverChambre" Content="Réserver" HorizontalAlignment="Left" Margin="560.989,334,0,0" VerticalAlignment="Top" Width="121" Height="27" Click="btReserverChambre_Click" Grid.Column="1"/>

                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
